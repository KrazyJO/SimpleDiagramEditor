{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "baseUrl": "./",
    "paths": {
      "@utils/*": ["src/Util/*"],
      "@diagram-ts/*": ["src/diagram-ts/*"],
      "@lib/*" : ["src/diagram-ts/*"],
      "@test/*" : ["test/*"],
      "@src/*" : ["src/*"]
    },
    "types" : ["mocha", "sinon-chai", "expect"]
  },
  "exclude": [
    "assets",
    "example",
    "node_modules",
    "build",
    "scripts",
    "karma.config.js",
    "index.js",
    "dist"
  ]
}
